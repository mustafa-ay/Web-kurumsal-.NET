@model IEnumerable<RitechWeb.Models.Model.Portfolyo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Portfolyo</h2>
<a class="btn btn-default" href="/Portfolyo/Create/">Yeni Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>LogoURL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.PortfolyoId</td>
            <td>@item.Baslik</td>
            <td><img width="100" height="100" src="@item.LogoURL" /></td>
            <td><a href="/Portfolyo/Edit/@item.PortfolyoId">Düzenle</a> | <a href="/Portfolyo/Delete/@item.PortfolyoId">Sil</a></td>
        </tr>
        }

    </tbody>
</table>
